<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GreenTextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="SilverTextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/appSilver</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <!--<item name="android:colorControlActivated">#ffffff</item>-->
        <!--<item name="android:colorControlNormal">#ffffff</item>-->
        <!--<item name="android:colorControlHighlight">#ffffff</item>-->
        <item name="colorPrimary">@color/white</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/white</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/white</item>
    </style>

</resources>
